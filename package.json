{
  "name": "bcommerce",
  "version": "1.0.0",
  "description": "A basic e-commerce application built with vanilla TypeScript and Tailwind CSS.",
  "type": "module",
  "scripts": {
    "start": "lite-server --baseDir=\"./dist\"",
    "prebuild": "npx @tailwindcss/cli -i src/css/main.css -o dist/main.css && cpx src/index.html dist/ && cpx src/static/**/* dist/static && cpx src/views/**/* dist/views",
    "build": "tsc && webpack --mode production",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.16",
    "@types/node": "^24.10.0",
    "cpx": "^1.5.0",
    "css-loader": "^7.1.2",
    "handlebars-loader": "^1.7.3",
    "handlebars": "^4.7.8",
    "html-webpack-plugin": "^5.6.4",
    "lite-server": "^2.6.1",
    "mini-css-extract-plugin": "^2.9.4",
    "style-loader": "^4.0.0",
    "tailwindcss": "^4.1.16",
    "typescript": "^5.9.3",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "fs": "^0.0.1-security",
    "path": "^0.12.7",
    "url": "^0.11.4"
  }
}
