<div id="product-images">
    <div class="selected-image">
        <img src="{{selectedImage.image}}" alt="selected image">
        <svg class="carousel-icon" alt="previous image" id="select-prev" width="12" height="18" viewBox="0 0 13 18" preserveAspectRatio="xMidYMid meet" xmlns="http://www.w3.org/2000/svg">
                <path d="M11 1 L3 9 L11 17" stroke="#1D2026" stroke-width="3" fill="none" stroke-linecap="round" stroke-linejoin="round" fill-rule="evenodd"/>
            </svg>
        <svg class="carousel-icon" alt="next image" id="select-next" width="13" height="18" viewBox="0 0 13 18" preserveAspectRatio="xMidYMid meet" xmlns="http://www.w3.org/2000/svg">
            <path d="M2 1 L10 9 L2 17" stroke="#1D2026" stroke-width="3" fill="none" stroke-linecap="round" stroke-linejoin="round" fill-rule="evenodd"/>
        </svg>
    </div>
    <ul id="product-images-list">
        {{#each images}}
        <li class="product-image group" tabindex="0"><img src="{{this.thumbnail}}" alt="image {{this.number}}"></li>
        {{/each}}
    </ul>
</div>
<div id="product-details">
    <h3 id="product-seller">{{product.seller}}</h3>
    <h1 id="product-name">{{product.name}}</h1>
    <p id="product-description">{{product.description}}</p>
    <div id="product-pricing">
        <span id="product-price">{{product.currency}}{{product.price}}</span>
        {{#if product.discount}}
        <div id="product-discount">{{product.discount}}%</div>
        {{/if}}
    </div>
    {{#if product.discount}}
    <div id="old-price">{{product.currency}}{{product.oldPrice}}</div>
    {{/if}}

    <div id="product-purchase">
        <div id="quantity-selector">
            <img id="decrease-quantity" src="static/icon-minus.svg"/>
            <span id="selected-quantity">{{currentQuantity}}</span>
            <img id="increase-quantity" src="static/icon-plus.svg"/>
        </div>
        <button id="add-to-cart-button" class="group">
            <svg class="cart-icon" alt="add to cart button" width="22" height="20" xmlns="http://www.w3.org/2000/svg"><path d="M20.925 3.641H3.863L3.61.816A.896.896 0 0 0 2.717 0H.897a.896.896 0 1 0 0 1.792h1l1.031 11.483c.073.828.52 1.726 1.291 2.336C2.83 17.385 4.099 20 6.359 20c1.875 0 3.197-1.87 2.554-3.642h4.905c-.642 1.77.677 3.642 2.555 3.642a2.72 2.72 0 0 0 2.717-2.717 2.72 2.72 0 0 0-2.717-2.717H6.365c-.681 0-1.274-.41-1.53-1.009l14.321-.842a.896.896 0 0 0 .817-.677l1.821-7.283a.897.897 0 0 0-.87-1.114ZM6.358 18.208a.926.926 0 0 1 0-1.85.926.926 0 0 1 0 1.85Zm10.015 0a.926.926 0 0 1 0-1.85.926.926 0 0 1 0 1.85Zm2.021-7.243-13.8.81-.57-6.341h15.753l-1.383 5.53Z" fill-rule="nonzero"/></svg>
            <span>Add to cart</span>
        </button>
    </div>
</div>