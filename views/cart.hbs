<div id="cart-header">Cart</div>
<div class="cart-items">
    {{#if items.length}}
        {{#each items}}
            <div class="cart-item-container" tabindex="0">
                <img class="cart-item-thumbnail"
                    src="static/image-product-1-thumbnail.jpg"
                    alt="item image">
                <div class="cart-item-details">
                    <div class="cart-item-description">{{this.itemName}}</div>
                    <div class="price-and-quantity">
                        <div
                            class="cart-item-quantity-x-price"><span
                                id="unit-price">{{this.unitPrice}}</span>
                            x <span id="item-quantity">{{this.itemQuantity}}</span>
                        </div>
                        <div
                            class="cart-item-total-price"><span
                                id="total-item-price">{{this.totalPrice}}</span></div>
                    </div>
                </div>
                
                <svg class="cart-item-delete-button">
                    <path
                        d="M0 2.625V1.75C0 1.334.334 1 .75 1h3.5l.294-.584A.741.741 0 0 1 5.213 0h3.571a.75.75 0 0 1 .672.416L9.75 1h3.5c.416 0 .75.334.75.75v.875a.376.376 0 0 1-.375.375H.375A.376.376 0 0 1 0 2.625Zm13 1.75V14.5a1.5 1.5 0 0 1-1.5 1.5h-9A1.5 1.5 0 0 1 1 14.5V4.375C1 4.169 1.169 4 1.375 4h11.25c.206 0 .375.169.375.375ZM4.5 6.5c0-.275-.225-.5-.5-.5s-.5.225-.5.5v7c0 .275.225.5.5.5s.5-.225.5-.5v-7Zm3 0c0-.275-.225-.5-.5-.5s-.5.225-.5.5v7c0 .275.225.5.5.5s.5-.225.5-.5v-7Zm3 0c0-.275-.225-.5-.5-.5s-.5.225-.5.5v7c0 .275.225.5.5.5s.5-.225.5-.5v-7Z"
                        id="a" /><use fill="#C3CAD9"
                        fill-rule="nonzero" />
                </svg>
            </div>
        {{/each}}
    {{else}}
    <div id="empty-container">your cart is empty.</div>
    {{/if}}
</div>
<button id="cart-checkout-button">Checkout</button>